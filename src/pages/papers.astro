---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const papers = [
  {
    id: 1,
    title: "Advancements in Quantum Computing for Secure Communications",
    authors: "Dr. Jane Smith, Dr. Robert Johnson",
    abstract: "This paper explores the latest advancements in quantum computing and their applications in secure communication systems.",
    tags: ["Quantum Computing", "Cybersecurity", "Communication Systems"],
    image: "https://images.unsplash.com/photo-1635070041078-e363dbe005cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  },
  {
    id: 2,
    title: "Machine Learning Approaches for Network Traffic Analysis",
    authors: "Prof. Michael Chen, Dr. Lisa Wang",
    abstract: "A comprehensive study on applying various machine learning techniques to analyze and classify network traffic patterns.",
    tags: ["Machine Learning", "Network Security", "Traffic Analysis"],
    image: "https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2068&q=80"
  },
  {
    id: 3,
    title: "Blockchain-based Solutions for Supply Chain Management",
    authors: "Dr. Alex Rodriguez, Prof. Sarah Kim",
    abstract: "This research presents novel blockchain architectures designed to enhance transparency and security in supply chain management systems.",
    tags: ["Blockchain", "Supply Chain", "Distributed Systems"],
    image: "https://images.unsplash.com/photo-1639322537228-f710d846310a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2232&q=80"
  },
  {
    id: 4,
    title: "Edge Computing Frameworks for IoT Applications",
    authors: "Prof. David Lee, Dr. Emily Wilson",
    abstract: "An analysis of edge computing frameworks and their effectiveness in processing data from Internet of Things devices.",
    tags: ["Edge Computing", "IoT", "Distributed Computing"],
    image: "https://www.cuelogic.com/wp-content/uploads/2021/06/IOT-and-edge-computing.jpg"
  },
  {
    id: 5,
    title: "Neural Networks for Natural Language Processing in Healthcare",
    authors: "Dr. Maria Garcia, Prof. Thomas Brown",
    abstract: "This paper presents innovative neural network architectures for processing medical text data and extracting valuable insights.",
    tags: ["Neural Networks", "NLP", "Healthcare"],
    image: "https://images.unsplash.com/photo-1576091160550-2173dba999ef?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  },
  {
    id: 6,
    title: "Secure Multi-party Computation for Privacy-Preserving Data Analysis",
    authors: "Prof. Jennifer Adams, Dr. Richard Taylor",
    abstract: "An exploration of secure multi-party computation protocols that enable collaborative data analysis while preserving privacy.",
    tags: ["Cryptography", "Privacy", "Data Analysis"],
    image: "https://images.unsplash.com/photo-1504639725590-34d0984388bd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1974&q=80"
  },
  {
    id: 7,
    title: "Autonomous Vehicle Communication Systems: Challenges and Solutions",
    authors: "Dr. Kevin Wilson, Prof. Laura Martinez",
    abstract: "This research addresses the challenges in developing reliable and secure communication systems for autonomous vehicles.",
    tags: ["Autonomous Vehicles", "V2X Communication", "Intelligent Transport"],
    image: "https://images.unsplash.com/photo-1549317661-bd32c8ce0db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  },
  {
    id: 8,
    title: "Advanced Algorithms for Energy-Efficient Cloud Computing",
    authors: "Prof. Daniel White, Dr. Sophia Lee",
    abstract: "A study on novel algorithms designed to optimize energy consumption in cloud computing environments without sacrificing performance.",
    tags: ["Cloud Computing", "Energy Efficiency", "Algorithms"],
    image: "https://images.unsplash.com/photo-1544197150-b99a580bb7a8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  }
];

// Categories for filtering
const categories = [
  "All",
  "Quantum Computing",
  "Machine Learning",
  "Blockchain",
  "Edge Computing",
  "Neural Networks",
  "Cryptography",
  "Autonomous Vehicles",
  "Cloud Computing"
];
---

<Layout>
  <Header />
  
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-8 text-center">Research Papers</h1>
      
      <div class="mb-8">
        <div class="flex flex-wrap justify-center gap-3 mb-6">
          {categories.map(category => (
            <button class="px-4 py-2 rounded-full bg-white border border-gray-300 text-gray-700 hover:bg-primary hover:text-white hover:border-primary transition-colors">
              {category}
            </button>
          ))}
        </div>
        
        <div class="max-w-md mx-auto">
          <div class="relative">
            <input type="text" placeholder="Search papers..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
            <button class="absolute right-3 top-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {papers.map(paper => (
          <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
            <div class="h-48 overflow-hidden">
              <img src={paper.image} alt={paper.title} class="w-full h-full object-cover transition-transform duration-300 hover:scale-105" />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2">{paper.title}</h3>
              <p class="text-gray-600 mb-3">{paper.authors}</p>
              <p class="text-gray-700 mb-4 line-clamp-3">{paper.abstract}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {paper.tags.map(tag => (
                  <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">{tag}</span>
                ))}
              </div>
              <a href={`/paper/${paper.id}`} class="inline-block px-4 py-2 bg-gradient-to-r from-primary to-secondary text-white rounded-lg hover:opacity-90 transition-opacity">
                Read Paper
              </a>
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-12 flex justify-center">
        <nav class="inline-flex rounded-md shadow">
          <a href="#" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-l-md hover:bg-gray-50">Previous</a>
          <a href="#" class="px-4 py-2 bg-primary border border-primary text-white">1</a>
          <a href="#" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">2</a>
          <a href="#" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">3</a>
          <a href="#" class="px-4 py-2 bg-white border border-gray-300 text-gray-700 rounded-r-md hover:bg-gray-50">Next</a>
        </nav>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>