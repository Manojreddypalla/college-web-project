---
const navLinks = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Editorial Board", href: "/editorial-board" },
  { name: "Papers", href: "/papers" },
  { name: "Archives", href: "/archives" },
  { name: "Contact", href: "/contact" },
];
---

<header class="bg-white shadow-md w-full">
  <div class="container mx-auto px-6 py-4 flex items-center justify-between">
    
    <!-- Left Section: SNIST Logo -->
    <div class="flex items-center">
      <img src="https://sreenidhi.edu.in/wp-content/uploads/2022/02/Sreenidhi-logo-1.png"
           alt="SNIST Logo" class="h-14 w-auto">
    </div>

    <!-- Center Section: Conference Logo & Details -->
    <div class="flex flex-col md:flex-row items-center space-x-3 text-center md:text-left">
      <img src="https://static.wixstatic.com/media/03c77b_c6202f1afbda43139e480b44bb271563~mv2.png"
           alt="ICNSIET Logo" class="h-10 w-auto">
      <div>
        <h1 class="text-xl md:text-2xl font-bold text-gray-800">ICNSIET 2025</h1>
        <p class="text-sm md:text-base text-gray-600">International Conference on Neural Nexus and Synergy: Innovation in Emerging Technologies</p>
        <p class="text-xs text-gray-500">ISSN: Pending</p>
      </div>
    </div>

    <!-- Right Section: Navigation + Springer Logo -->
    <nav class="hidden md:flex items-center space-x-5">
      {navLinks.map((link) => (
        <a href={link.href} class="text-gray-800 hover:text-primary font-medium">{link.name}</a>
      ))}
      <img src="https://www.imiscoe.org/images/springerlogo.jpg"
           alt="Springer Logo" class="h-10 w-auto">
    </nav>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-gray-800 text-2xl">
      â˜°
    </button>

  </div>

  <!-- Mobile Navigation (Hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden flex flex-col items-center space-y-4 bg-white py-4 shadow-md">
    {navLinks.map((link) => (
      <a href={link.href} class="text-gray-800 hover:text-primary font-medium">{link.name}</a>
    ))}
  </div>
</header>

<script>
  document.getElementById("menu-toggle").addEventListener("click", function () {
    document.getElementById("mobile-menu").classList.toggle("hidden");
  });
</script>