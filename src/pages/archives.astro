---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const archives = [
  {
    year: 2025,
    issues: [
      {
        volume: 1,
        issue: 1,
        articles: [
          {
            title: "Quantum Computing Applications in Modern Cryptography",
            authors: "Johnson, S., & Smith, R.",
            pages: "1-15",
            doi: "10.1234/qc.2025.001"
          },
          {
            title: "Neural Networks in Edge Computing: A Survey",
            authors: "Chen, M., & Wang, L.",
            pages: "16-32",
            doi: "10.1234/nn.2025.002"
          }
        ]
      },
      {
        volume: 1,
        issue: 2,
        articles: [
          {
            title: "Blockchain Solutions for Supply Chain Management",
            authors: "Rodriguez, E., & Kim, S.",
            pages: "33-48",
            doi: "10.1234/bc.2025.003"
          }
        ]
      }
    ]
  }
];
---

<Layout>
  <Header />
  
  <main class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-12">Archives</h1>
      
      {archives.map(year => (
        <div class="mb-12">
          <h2 class="text-3xl font-bold mb-6">Year {year.year}</h2>
          
          {year.issues.map(issue => (
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
              <h3 class="text-2xl font-semibold mb-4">Volume {issue.volume}, Issue {issue.issue}</h3>
              
              <div class="space-y-4">
                {issue.articles.map(article => (
                  <div class="border-b border-gray-200 pb-4 last:border-0 last:pb-0">
                    <h4 class="text-xl font-medium mb-2">
                      <a href={`/paper/${article.doi}`} class="text-primary hover:underline">
                        {article.title}
                      </a>
                    </h4>
                    <p class="text-gray-600 mb-2">{article.authors}</p>
                    <div class="flex gap-4 text-sm text-gray-500">
                      <span>Pages: {article.pages}</span>
                      <span>DOI: {article.doi}</span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      ))}
    </div>
  </main>

  <Footer />
</Layout>